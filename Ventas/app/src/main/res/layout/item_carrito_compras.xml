<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="@dimen/margin_carview_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingRight="5px" >

        <TableRow
                android:id="@+id/Cabecera"
                android:layout_width="fill_parent"
                android:scrollbarStyle="outsideInset"
                android:layout_height="wrap_content" >

            <TextView
                    android:text="444 | ABAQUIN FRASCO X LITRO"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNombreProductoCarrito"/>

            <TextView
                    android:text="100.0"
                    android:layout_width="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:id="@+id/txtCantidadCarrito"/>

            <TextView
                    android:text="FRASCO"
                    android:layout_width="60dp"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUnidadProductoCarrito"/>

            <TextView
                    android:text="10.5"
                    android:layout_width="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:id="@+id/txtPrecioUnitarioCarrito"/>

            <TextView
                    android:text="1,005.0"
                    android:layout_width="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:id="@+id/txtPrecioTotalCarrito"/>
        </TableRow>
    </LinearLayout>
</android.support.v7.widget.CardView>
