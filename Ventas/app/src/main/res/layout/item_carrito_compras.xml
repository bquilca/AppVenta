<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="@dimen/margin_carview_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
    >


        <RadioGroup
                android:id="@+id/rdgGroupProductoCarrito"
                android:visibility="visible"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
        >

            <TextView
                    android:text="Codigo: 444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/txtCodigoProductoCarrito"/>


            <TextView
                    android:text="ABAQUIN FRASCO X LITRO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtCodigoProductoCarrito"
                    android:id="@+id/txtNombreProductoCarrito"/>
        </RadioGroup>

        <TextView
                android:text="Cantidad 100.00 Cajax12  S/ 1,500.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rdgGroupProductoCarrito"
                android:ems="3"
                android:id="@+id/txtCantidadCarrito"/>

        <TextView
                android:text="Total : S/123,005.06"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/rdgGroupProductoCarrito"
                android:layout_below="@+id/txtCantidadCarrito"
                android:id="@+id/txtPrecioTotalCarrito"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>